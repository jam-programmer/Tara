<!DOCTYPE html>
<html lang="fa" class="light-style layout-menu-fixed" dir="rtl" data-theme="theme-default" data-assets-path="~/assets/" data-template="horizontal-menu-template-no-customizer">

<partial name="Partial/_Head.cshtml"/>
@await RenderSectionAsync("Style", false)
<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-navbar-full layout-horizontal layout-without-menu">
        <div class="layout-container">
            <!-- Navbar -->

            <partial name="Partial/_Navbar.cshtml" />
            <!-- / Navbar -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Menu -->
                    <partial name="Partial/_Menu.cshtml" />
                      <!-- / Menu -->
                    <!-- Content -->

                    <div class="container-xxl flex-grow-1 container-p-y">
                        @RenderBody()
                    </div>
                    <!--/ Content -->
                    <!-- Footer -->
                    <partial name="Partial/_Footer.cshtml" />
                    <!-- / Footer -->

                    <div class="content-backdrop fade"></div>
                </div>
                <!--/ Content wrapper -->
            </div>

            <!--/ Layout container -->
        </div>
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>

    <!-- Drag Target Area To SlideIn Menu On Small Screens -->
    <div class="drag-target"></div>
    <partial name="Partial/_Script.cshtml" />
    @await RenderSectionAsync("Script",false)
</body>
</html>